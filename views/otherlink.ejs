  <div class="apt">
    <!---->

    <!---->
    <!--Add table-->
    <!-- Bootstrap container: adds left/right padding and centers content -->

    <div class="container-fluid mt-0">
      <!-- Bootstrap card: adds a nice box around the content with padding and shadow -->
      <div class="card shadow">
        <!-- Card header: styled with background color and text color -->
        <div class="card-header bg-success text-warning">
          <h4 class="mb-0">Key Updates: New Tax Provisions for 2025</h4>
          <!-- Table title -->
        </div>

        <!-- Card body: contains the table, with no padding to keep it tight -->
        <div class="card-body p-0">
          <!-- Responsive wrapper with both horizontal and vertical scroll -->
          <div
            class="table-responsive"
            style="max-height: 400px; overflow-y: auto"
          >
            <!-- Responsive wrapper: enables horizontal scroll on small screens -->
            <!-- <div class="table-responsive"> -->

            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <!-- Table header field 1-->
                  <th scope="col">Effective Years</th>
                  <th scope="col">Items</th>
                  <th scope="col">Application</th>
                  <th scope="col">Notes</th>
                </tr>
              </thead>

              <tbody>
                <% if (taxDatas && taxDatas.length > 0) { %> <%
                taxDatas.forEach((row,index)=> { %>

                <tr>
                  <th scope="row"><%= index + 1 %></th>
                  <!--scope="row" means that this <th> is a row header: bold color â€” it labels the entire row it's in.-->
                  <td><%= row.ed %></td>
                  <td><%= row.nb %></td>
                  <td><%= row.cr %></td>

                  <td><%= row.notes %></td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td colspan="6" class="text-muted">No tax data available.</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <br />
      <p>Sources: The IRS, and OBBBA</p>
    </div>
  </div>

