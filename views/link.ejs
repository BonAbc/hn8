  <div class="apd">
    <div class="card" style="width: 18rem">
      <img src="/images/hncal.PNG" class="card-img-top" alt="Calculator" />

      <div class="card-body">
        <h5 class="card-title">Calculator</h5>
        <p class="card-text"></p>
        <a id="m1" href="#" class="btn btn-primary">Accurate</a>
      </div>
    </div>

    <div class="card" style="width: 18rem">
      <img
        src="/images/Database-fill-check.PNG"
        class="card-img-top"
