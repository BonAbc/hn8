        readonly
      />
    </div>
    <!--  required : original-->
    <!-- Input field 2 -->

    <div class="mb-3">
      <label for="ac2" class="fw-semibold">Total Expense</label>
      <input
        type="text"
        id="ac2"
        name="ac2"
        class="mx-auto"
        style="height: 35px; padding: 2px 6px"
        readonly
      />
      <!--  required : original-->
    </div>
    <div class="mb-3">
      <label for="ac3" class="fw-semibold">Income before tax</label>
      <input
        type="text"
        id="ac3"
        name="ac3"
        class="mx-auto"
        style="height: 35px; padding: 2px 6px"
        readonly
      />
    </div>
    <div class="mb-3">
      <label for="ac4" class="fw-semibold">Income Tax</label>
      <input
        type="text"
        id="ac4"
        name="ac4"
        class="mx-auto"
        style="height: 35px; padding: 2px 6px"
        readonly
      />
      <!--  required : original-->
    </div>
    <div class="mb-3">
      <label for="ac5" class="fw-semibold">Net Income</label>
      <input
        type="text"
        id="ac5"
        name="ac5"
        class="mx-auto"
        style="height: 35px; padding: 2px 6px"
        readonly
      />
    </div>

    <div class="d-flex gap-2 mt-2">
      <button
        id="ac6"
        class="btn btn-success"
        disabled
        style="
          opacity: 1;
          background-color: #198754;
          border-color: #198754;
          color: white;
          cursor: not-allowed;
        "
      >
        Calculate
      </button>
      <button id="ac7" class="btn btn-dark">Clear</button>
    </div>
  </div>
  <br />
  <div>
    <h6>A little detail about accounting</h6>

