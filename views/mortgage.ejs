<%- include("partials/header.ejs") %>

<main>
  <!--main should move to main page-->
  <!---->
  <form>
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" value="<%= defaultDate %>" />
  </form>
  <br />
  <!---->
  <h2 class="mo1">Mortgage Calculator</h2>
  <!-- <h3>Debt Amortization</h3>-->
  <!--Add another div-->

  <!--Add another div-->
  <!-- Mortgage Calculator UI -->
  <div class="mortgage-container">
    <div class="mortgage-wrapper">
      <!-- Purchase and Down Payment -->
      <div class="calc-block">
        <label for="num1">Purchase Price</label>
        <input type="text" id="num1" placeholder="Enter number 1" readonly />
      </div>

      <div class="calc-block">
        <label for="num2">Down Payment</label>
        <input type="text" id="num2" placeholder="Enter number 2" readonly />
      </div>

      <div class="calc-block">
        <label for="num3">Loan Amount <span style="color: red">*</span></label>
        <input
          type="text"
          id="num3"
          placeholder="Auto/Enter number 3"
          readonly
        />
      </div>
    </div>

    <div class="mortgage-wrapper">
      <!-- Interest Rate, Loan Term, Monthly Payment -->
      <div class="calc-block">
        <label for="num4"
          >Annual Interest Rate <span style="color: red">*</span>
        </label>
        <div class="input-wrapper">
          <input
            type="text"
            id="num4"
            placeholder="Enter number 4 *"
            required
            readonly
          />
          <span class="unit">%</span>
        </div>
      </div>

      <div class="calc-block">
        <label for="num5"
          >Loan Term in year <span style="color: red">*</span></label
        >
        <input
          type="text"
          id="num5"
          placeholder="Enter number 5 *"
          required
          readonly
        />
      </div>

      <div class="calc-block">
        <label for="num6">Constant Monthly Payment </label>
        <input type="text" id="num6" placeholder="Number 6 Auto" readonly />
      </div>
    </div>

    <div class="mortgage-wrapper">
      <!-- Additional Costs -->
      <div class="calc-block">
        <label for="num7">Monthly Property Tax</label>
        <input type="text" id="num7" placeholder="Enter number 7" readonly />
      </div>

      <div class="calc-block">
        <label for="num8">Monthly Insurance</label>
        <input type="text" id="num8" placeholder="Enter number 8" readonly />
      </div>

      <div class="calc-block">
        <label for="num9">Others Monthly</label>
        <input type="text" id="num9" placeholder="Enter number 9" readonly />
      </div>
    </div>
  </div>
  <br />
  <br />
  <div class="mortgage-container">
    <div class="mortgage-wrapper">
      <!-- Operation and Buttons -->
      <div class="calc-block">
        <label for="operator">Select Calculation</label>
        <select id="operator">
          <option value="">- Select Calculation -</option>
          <option value="loan">
            Loan Amount : Number 1/ Number 2 Required
          </option>
          <option value="payment">Monthly Payment</option>
          <option value="total">Total Monthly Payment</option>
        </select>
      </div>
    </div>
    <div class="mortgage-wrapper">
      <div class="calc-block">
        <button type="button" id="calculateBtn" disabled>Calculate</button>
        <br />
        <button type="button" id="resetBtn" style="margin-top: 10px">
          Reset
        </button>
      </div>
    </div>

    <div class="mortgage-wrapper">
      <!-- Result -->
      <div class="calc-block">
        <label for="result">Monthly Total</label>
        <input type="text" id="result" placeholder="Result Auto" readonly />
      </div>
    </div>
  </div>
  <br />
